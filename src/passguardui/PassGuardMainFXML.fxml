<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="450.0" maxWidth="800.0" minHeight="450.0" minWidth="800.0" prefHeight="450.0" prefWidth="800.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="passguardui.PassGuardMainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="logOut" mnemonicParsing="false" onAction="#handleLogoutMenuItem" text="Logout" />
              <MenuItem fx:id="close" mnemonicParsing="false" onAction="#closeMenuItem" text="Close" />
            </items>
          </Menu>
          <Menu fx:id="editMenuButton" mnemonicParsing="false" onShowing="#handleEditMenuButton" text="Edit">
            <items>
              <MenuItem fx:id="addAccount" mnemonicParsing="false" onAction="#handleAddAccountButton" text="Add Entry" />
                  <MenuItem fx:id="editAccount" mnemonicParsing="false" onAction="#handleEditAccountButton" text="Edit Entry" />
                  <MenuItem fx:id="retrieveAccount" mnemonicParsing="false" onAction="#handleRetrieveAccountInfoButton" text="Retrieve Entry Info" />
                  <MenuItem fx:id="removeAccount" mnemonicParsing="false" onAction="#handleRemoveAccountButton" text="Remove Entry" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="about" mnemonicParsing="false" onAction="#handleAboutMenuButton" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefHeight="374.0" prefWidth="525.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchAccountTextField" prefHeight="39.0" prefWidth="338.0" promptText="Search for Account Name..." />
                  <Button fx:id="searchAccountButton" mnemonicParsing="false" onAction="#handleSearchAccountButton" prefHeight="42.0" prefWidth="171.0" text="Search" />
               </children>
               <padding>
                  <Insets bottom="8.0" right="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <TableView fx:id="accountTable">
              <columns>
                <TableColumn fx:id="accountColumn" prefWidth="102.0" text="Account" />
                <TableColumn fx:id="usernameColumn" prefWidth="122.0" text="Username" />
                  <TableColumn fx:id="passwordColumn" prefWidth="127.0" text="Password" />
                  <TableColumn fx:id="notesColumn" prefWidth="165.0" text="Notes" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="8.0" />
         </padding>
      </VBox>
   </left>
   <right>
      <AnchorPane prefHeight="411.0" prefWidth="264.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addAccountButton" layoutX="33.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleAddAccountButton" prefHeight="39.0" prefWidth="200.0" text="Add Entry" />
            <Button fx:id="retrieveAccountButton" layoutX="33.0" layoutY="231.0" mnemonicParsing="false" onAction="#handleRetrieveAccountInfoButton" prefHeight="39.0" prefWidth="201.0" text="Retrieve Entry Info" />
            <Button fx:id="removeAccountButton" layoutX="32.0" layoutY="308.0" mnemonicParsing="false" onAction="#handleRemoveAccountButton" prefHeight="39.0" prefWidth="200.0" text="Remove Entry" />
            <Button fx:id="editAccountButton" layoutX="32.0" layoutY="151.0" mnemonicParsing="false" onAction="#handleEditAccountButton" prefHeight="39.0" prefWidth="200.0" text="Edit Entry" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
